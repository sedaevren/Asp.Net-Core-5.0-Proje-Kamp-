@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Gelen Kutusu</h1>
<table class="table table-active">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@( ((DateTime)item.MessageDate).ToString("dd-MMM-yyyy") )</td>
            <td>
                <a href="/Message/MessageDetail/@item.MessageID" class="btn btn-warning btn-sm">Mesajı Aç</a>
            </td>
        </tr>
    }
</table>
<a href="/Message/SendMessage/" class="btn btn-info btn-sm">Yeni Mesaj Oluştur</a>
